<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:text="Intelli Planner"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#323131" />

    <TextView
        android:id="@+id/login_idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:text="ID"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/login_idEditText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/cell"
        android:ems="10"
        android:inputType="text"/>

    <TextView
        android:id="@+id/login_pwTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:text="PW"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/login_pwEditText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/cell"
        android:ems="10"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#7C9EDF"
            android:text="register"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:backgroundTint="#7C9EDF"
            android:text="login"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>